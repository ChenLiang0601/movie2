<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.movie2.mapper.CommentViewMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.movie2.bean.CommentView">
        <result column="name" property="name" />
        <result column="username" property="username" />
        <result column="comment" property="comment" />
        <result column="time" property="time" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        name, username, comment, time
    </sql>

    <select id="findAllComments" resultType="com.movie2.bean.CommentView">
        select * from comment_view
    </select>

    <!--评论管理：模糊查找评论-->
    <select id="findComment" resultType="com.movie2.bean.CommentView">
        select * from comment_view where comment like concat('%',#{comment},'%')
    </select>

</mapper>
